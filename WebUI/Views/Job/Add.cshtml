@model JobViewModel
<!-- Banner Starts Here -->
<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h2>Yeni vakansiya əlavə edin</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Banner Ends Here -->


<section class="contact-us">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="down-contact">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="sidebar-item contact-form">
                                <div class="sidebar-heading">
                                    <h2>Yeni elan</h2>
                                </div>
                                <div class="content">
                                    <form id="contact" asp-controller="Job" asp-action="Add" method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.Name">Vəzifə</label>
                                                    <input asp-for="AddJobDto.Name" type="text" id="name" required="">
                                                    <span asp-validation-for="AddJobDto.Name" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.CompanyName">Şirkətin adı</label>
                                                    <input asp-for="AddJobDto.CompanyName" type="text" id="email" required="">
                                                    <span asp-validation-for="AddJobDto.CompanyName" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label>Kateqoriya</label>
                                                    <select name="categoryId" class="form-control">
                                                        @foreach (var item in Model.Categories)
                                                        {
                                                            <optgroup label="@item.Name">
                                                                @foreach (var subCategory in Model.SubCategories.Where(x => x.CategoryId == item.Id).ToList())
                                                                {
                                                                    <option value="@subCategory.Id">@subCategory.Name</option>
                                                                }

                                                            </optgroup>
                                                        }

                                                    </select>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.EducationId">Təhsil</label>
                                                    @Html.DropDownListFor(x => x.AddJobDto.EducationId, new SelectList(Model.Educations, "Value", "Text"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.AddJobDto.EducationId, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.ExperienceId">Təcrübə</label>
                                                    @Html.DropDownListFor(x => x.AddJobDto.ExperienceId, new SelectList(Model.Experience, "Value", "Text"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.AddJobDto.ExperienceId, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.CityId">Şəhər</label>
                                                    @Html.DropDownListFor(x => x.AddJobDto.CityId, new SelectList(Model.Cities, "Value", "Text"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.AddJobDto.CityId, "", new { @class = "text-danger" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.Person">Əlaqədar şəxs</label>
                                                    <input asp-for="AddJobDto.Person" type="text" id="subject">
                                                    <span asp-validation-for="AddJobDto.Person" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    <label asp-for="AddJobDto.JobTypeId">İşin tipi</label>
                                                    @Html.DropDownListFor(x => x.AddJobDto.JobTypeId, new SelectList(Model.JobTypes, "Value", "Text"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.AddJobDto.JobTypeId, "", new { @class = "text-danger" })
                                                    <span asp-validation-for="AddJobDto.JobTypeId" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label>Min. maaş</label>
                                                    <input asp-for="AddJobDto.MinSalary" type="number" id="subject" min="0" value="500">
                                                    <span asp-validation-for="AddJobDto.MinSalary" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label>Max. maaş</label>
                                                    <input asp-for="AddJobDto.MaxSalary" type="number" id="subject" max="10000" value="1000">
                                                    <span asp-validation-for="AddJobDto.MaxSalary" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label>Min. yaş</label>
                                                    <input asp-for="AddJobDto.MinAge" type="number" id="subject" min="18" value="18">
                                                    <span asp-validation-for="AddJobDto.MinAge" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <label>Max. yaş</label>
                                                    <input asp-for="AddJobDto.MaxAge" type="number" id="subject" max="70" value="65">
                                                    <span asp-validation-for="AddJobDto.MaxAge" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <label>Namizədə tələblər</label>
                                                    <textarea asp-for="AddJobDto.Requirements" rows="6" id="message" required=""></textarea>
                                                    <span asp-validation-for="AddJobDto.Requirements" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <label>İş barədə məlumat</label>
                                                    <textarea asp-for="AddJobDto.JobInformation" rows="6" id="message" required=""></textarea>
                                                    <span asp-validation-for="AddJobDto.JobInformation" class="text-danger"></span>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" id="form-submit" class="main-button">Təstiqlə</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-item contact-information">
                                <div class="sidebar-heading">
                                    <h2>Məlumatlandırma</h2>
                                </div>
                                <div class="content">
                                    <h6>
                                        Sizin əlavə etdiyiniz elan 12 saat müddətində düzəliş edildikdən sonra paylaşılacaqdır.
                                        Elan yoxlanıldıqda əgər uyğunsuzluqluq olarsa paylaşılmıyacaq. Təstiq mesajı email hesabınıza göndəriləcəkdir
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>



