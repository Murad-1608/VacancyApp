@model List<Entity.DTOs.GetJobDto>
<!-- Banner Starts Here -->
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            <div class="item">
                <img src="~/VacancyViews/assets/images/blog-5-720x480.jpg" alt="">
                <div class="item-content">
                    <div class="main-content">
                        <div class="meta-category">
                            @if (Model[3].MinSalary == Model[3].MaxSalary)
                            {
                                <span>@Model[3].MinSalary AZN</span>

                            }
                            else
                            {
                                <span>@Model[3].MinSalary - @Model[3].MaxSalary AZN</span>
                            }
                        </div>
                        <a asp-controller="Job" asp-action="Details" asp-route-id="@Model[3].Id"><h4>@Model[3].Name</h4></a>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/VacancyViews/assets/images/blog-6-720x480.jpg" alt="">
                <div class="item-content">
                    <div class="main-content">
                        <div class="meta-category">
                            @if (Model[4].MinSalary == Model[4].MaxSalary)
                            {
                                <span>@Model[4].MinSalary AZN</span>

                            }
                            else
                            {
                                <span>@Model[4].MinSalary - @Model[4].MaxSalary AZN</span>
                            }
                        </div>
                        <a asp-controller="Job" asp-action="Details" asp-route-id="@Model[4].Id"><h4>@Model[4].Name</h4></a>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/VacancyViews/assets/images/product-6-720x480.jpg" alt="">
                <div class="item-content">
                    <div class="main-content">
                        <div class="meta-category">
                            @if (Model[5].MinSalary == Model[5].MaxSalary)
                            {
                                <span>@Model[5].MinSalary AZN</span>

                            }
                            else
                            {
                                <span>@Model[5].MinSalary - @Model[5].MaxSalary AZN</span>
                            }
                        </div>
                        <a asp-controller="Job" asp-action="Details" asp-route-id="@Model[5].Id"><h4>@Model[5].Name</h4></a>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Banner Ends Here -->

<section class="blog-posts grid-system">
    <div class="container">
        <div class="all-blog-posts">
            <h2 class="text-center">Ən son paylaşılanlar</h2>
            <br>
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {

                    <div class="col-md-4 col-sm-6">
                        <div class="blog-post">
                            <div class="down-content">
                                @if (Model[i].MinSalary == Model[i].MaxSalary)
                                {
                                    <span>@Model[i].MinSalary AZN</span><br>

                                }
                                else
                                {
                                    <span>@Model[i].MinSalary - @Model[i].MaxSalary AZN</span><br>
                                }
                                <a href="jobs.html"><h4>@Model[i].Name</h4></a>
                                <div class="post-options">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <ul class="post-tags">
                                                <li><i class="fa fa-bullseye"></i></li>
                                                <li><a asp-controller="Job" asp-action="Details" asp-route-id="@Model[i].Id">Müraciət</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>